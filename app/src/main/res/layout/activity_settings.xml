<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        app:navigationIcon="@drawable/ic_arrow"
        app:subtitleTextColor="@android:color/primary_text_dark"
        app:title="@string/settings"
        android:paddingBottom="20dp"/>


    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_of_points"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/gen_indent"
        android:text="@string/dark_theme"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_of_points" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_of_points"
        android:paddingHorizontal="@dimen/gen_indent"
        android:text="@string/share_app"
        app:drawableEndCompat="@drawable/ic_share"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size_of_points"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_of_points"
        android:paddingHorizontal="@dimen/gen_indent"
        android:text="@string/write_to_support"
        app:drawableEndCompat="@drawable/ic_support"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size_of_points"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_of_points"
        android:paddingHorizontal="@dimen/gen_indent"
        android:text="@string/user_agreement"
        app:drawableEndCompat="@drawable/ic_arrow_forward"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size_of_points"
        android:textColor="@color/black"/>

</LinearLayout>