<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        app:navigationIcon="@drawable/ic_arrow"
        app:subtitleTextColor="@android:color/primary_text_dark"
        app:title="@string/settings"
        android:paddingBottom="@dimen/padding_to_main"/>

    <androidx.appcompat.widget.SwitchCompat style="@style/SwitchStyle"
        android:id="@+id/dark_theme_switch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_of_points"
        android:paddingHorizontal="@dimen/gen_indent"
        android:text="@string/dark_theme" />

    <androidx.appcompat.widget.AppCompatTextView style="@style/MenuItemsStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_of_points"
        android:paddingHorizontal="@dimen/gen_indent"
        android:id="@+id/share_app_butt"
        android:text="@string/share_app"
        app:drawableEndCompat="@drawable/ic_share" />

    <TextView style="@style/MenuItemsStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_of_points"
        android:paddingHorizontal="@dimen/gen_indent"
        android:id="@+id/support_butt"
        android:text="@string/write_to_support"
        app:drawableEndCompat="@drawable/ic_support" />

    <TextView style="@style/MenuItemsStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_of_points"
        android:paddingHorizontal="@dimen/gen_indent"
        android:id="@+id/user_agreement_butt"
        android:text="@string/user_agreement"
        app:drawableEndCompat="@drawable/ic_arrow_forward"/>

</LinearLayout>