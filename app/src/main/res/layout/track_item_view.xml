<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/padding_search_frame"
    android:gravity="center_vertical"
    android:minHeight="@dimen/height_of_points"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivArtwork"
        android:layout_width="@dimen/art_work_size"
        android:layout_height="@dimen/art_work_size"
        android:scaleType="centerCrop"
        tools:src="@drawable/default_art_work" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_search_string"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTrackName"
            style="@style/TextTrackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Название трека" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvArtistName"
                style="@style/TextArtistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Имя артиста" />

            <ImageView
                style="@style/IcStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_weight="0"
                android:src="@drawable/ic_ellipse" />

            <TextView
                android:id="@+id/trackTimeText"
                style="@style/TextArtistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                tools:text="56:43" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        style="@style/IcStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="@dimen/padding_search_frame"
        android:src="@drawable/ic_arrow_forward" />

</LinearLayout>