<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/padding_search_frame"
    android:gravity="center_vertical"
    android:minHeight="@dimen/height_of_points"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_artwork_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/art_work_radius"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/ivArtwork"
            android:layout_width="@dimen/art_work_size"
            android:layout_height="@dimen/art_work_size"
            android:scaleType="centerCrop"
            tools:src="@drawable/default_art_work" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_search_string"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_playlist_name"
            style="@style/TextTrackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Лучшие песни 2007" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_count_tracks"
                style="@style/TextArtistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="98 треков" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>