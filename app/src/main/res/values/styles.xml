<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ButtonMainStyle" parent = "Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_ic_padding</item>
<!--        <item name="iconTint">?attr/colorOnSecondary</item>-->
        <item name="cornerRadius">@dimen/main_butt_radius</item>
<!--        <item name="android:textColor">?attr/colorOnSecondary</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textAllCaps">false</item>
<!--        <item name="android:backgroundTint">attr/colorOnPrimary</item>-->
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:layout_marginBottom">@dimen/gen_indent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MainTitleStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="TitleStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textStyle">bold</item>
<!--        <item name="android:textColor">@color/black</item>-->
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="MenuItemsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_of_points</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/gen_indent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_of_points</item>
<!--        <item name="android:textColor">@color/black</item>-->

    </style>
</resources>
