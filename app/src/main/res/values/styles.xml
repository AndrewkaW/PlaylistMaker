<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonMainStyle" parent = "Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_ic_padding</item>
        <item name="cornerRadius">@dimen/main_butt_radius</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="MainTitleStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="TitleStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textStyle">bold</item>
<!--        <item name="android:textColor">@color/black</item>-->
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="MenuItemsStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_of_points</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="drawableTint">?attr/colorSecondaryVariant</item>
        <item name="trackTint">#3772E7</item>
        <item name="thumbTint">#284581</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_of_points</item>
        <item name= "android:textStyle">normal</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
    </style>

<!--    SearchActivity-->

    <style name = "SearchTextEdit">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">?attr/colorSecondaryVariant</item>
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">@dimen/text_size_of_points</item>
    </style>

    <style name="SearchIcStyle">
        <item name="tint">?attr/colorSecondaryVariant</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TextTrackName">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_of_points</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextArtistName">
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/artist_time_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="IcStyle">
        <item name="tint">?attr/colorSecondaryVariant</item>

    </style>

<!--    04.04-->
    <style name="ErrorTextPH">
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/er_ph_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_to_main</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="RefreshButtPH" parent = "Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="fontWeight">500</item>
        <item name="android:textSize">@dimen/er_ph_butt_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

</resources>
