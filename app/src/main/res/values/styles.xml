<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ButtonMainStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_ic_padding</item>
        <item name="cornerRadius">@dimen/main_butt_radius</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:backgroundTint">@color/main_butt_tint</item>
        <item name="android:textColor">@color/main_butt_text</item>
        <item name="iconTint">@color/main_ic</item>
    </style>

    <style name="MenuTitleStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:padding">@dimen/padding_search_frame</item>
        <item name="android:minHeight">@dimen/height_of_points</item>
    </style>

    <style name="TitleStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="MenuItemsStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_of_points</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">500</item>
        <item name="drawableTint">@color/ic_points</item>

    </style>

    <style name="SwitchStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_of_points</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">500</item>
        <item name="trackTint">@color/switch_thumb</item>
        <item name="thumbTint">@color/switch_track</item>
    </style>

    <style name="SearchTextEdit">
        <item name="android:textColor">@color/dark_main</item>
        <item name="android:textColorHint">?attr/colorSecondaryVariant</item>
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">@dimen/text_size_of_points</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <style name="SearchIcStyle">
        <item name="tint">?attr/colorSecondaryVariant</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TextTrackName">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_of_points</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextArtistName">
        <item name="android:textColor">@color/ic_points</item>
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/artist_time_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="IcStyle">
        <item name="tint">@color/ic_points</item>

    </style>

    <style name="ErrorTextPH">
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/er_ph_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="RefreshButtPH" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="fontWeight">500</item>
        <item name="android:textSize">@dimen/er_ph_butt_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">15dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">10dp</item>
    </style>

    <style name="SearchTitle">
        <item name="fontWeight">500</item>
        <item name="android:textSize">@dimen/er_ph_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="PlayerTextTrackName">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlayerTextArtistName">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/er_ph_butt_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PlayerInfoTitle">
        <item name="android:textColor">@color/main_grey</item>
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/player_info</item>
        <item name="android:layout_marginTop">@dimen/margin_player_text</item>
        <item name="android:layout_marginStart">@dimen/margin_player_text</item>
    </style>

    <style name="PlayerInfo">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/player_info</item>
        <item name="android:layout_marginEnd">@dimen/margin_player_text</item>
        <item name="android:layout_marginStart">@dimen/margin_player_text</item>
        <item name="android:layout_marginTop">@dimen/margin_player_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="PlayTime">
        <item name="fontWeight">500</item>
        <item name="android:textSize">@dimen/play_time</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <!--    MediaLibrary-->

    <style name="MediaTubs">
        <item name="fontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/play_time</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/MediaTubs</item>
        <item name="tabIndicatorColor">@color/tab_indicator_color</item>
        <item name="tabTextColor">@color/tab_indicator_color</item>
    </style>

    <style name="BottomNavTextStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/navigate_text_size</item>
    </style>

    <!--    NewPlaylist-->

    <style name="NewPlaylistTextEdit">
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_of_points</item>
        <!--        <item name="android:textCursorDrawable">@drawable/color_cursor</item>-->
        <item name="android:paddingStart">@dimen/padding_et_horizontal</item>
        <item name="android:paddingEnd">@dimen/padding_et_horizontal</item>
        <item name="android:paddingTop">@dimen/padding_et_top</item>
        <item name="android:paddingBottom">@dimen/padding_et_bot</item>
    </style>

    <style name="CreateBtn" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="fontWeight">500</item>
        <item name="android:textSize">@dimen/text_size_of_points</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@drawable/button_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/padding_btn</item>
        <item name="android:paddingBottom">@dimen/padding_btn</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--        <item name="android:textColor">?attr/colorOnPrimary</item>-->
        <item name="counterTextColor">@color/ic_points</item>
        <item name="boxStrokeColor">@color/main_blue</item>
        <item name="hintTextColor">@color/main_blue</item>
        <item name="prefixTextColor">@color/main_blue</item>
        <item name="colorControlActivated">@color/main_blue</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:background">@null</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
    </style>

    <style name="TextPlaylistItem">
        <item name="android:gravity">top</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/navigate_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <!-- Alert Dialog -->
    <style name="AlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialogText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialogTextBody</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MaterialAlertDialogTextBody" parent="@style/MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/dark_main</item>
        <item name="android:textSize">@dimen/dialog_text_size</item>
    </style>

    <style name="MaterialAlertDialogText" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/dark_main</item>
        <item name="android:textSize">@dimen/dialog_text_size_title</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/main_blue</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/main_blue</item>
    </style>

    <style name="PlaylistNameStyle">
        <item name="android:textSize">@dimen/text_playlist_detail_24</item>
        <item name="android:textColor">@color/dark_main</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PlaylistDescriptionStyle">
        <item name="android:textSize">@dimen/text_playlist_detail_18</item>
        <item name="android:textColor">@color/dark_main</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="PlaylistIcStyle">
        <item name="tint">@color/dark_main</item>
        <item name="android:scaleType">center</item>
    </style>
</resources>
